{
  "name": "roadmap2xlsx",
  "version": "0.1.0",
  "description": "Creates a Gantt chart .xlsx from a Github project roadmap .tsv",
  "main": "dist/cli.js",
  "bin": {
    "roadmap2xlsx": "dist/cli.js"
  },
  "scripts": {
    "dev": "pnpm ts-node src/cli.ts",
    "build": "pnpm tsc",
    "start": "node dist/cli.js",
    "lint": "pnpm eslint",
    "lint:fix": "pnpm eslint --fix",
    "format": "pnpm prettier . --check",
    "format:fix": "pnpm prettier . --write",
    "test": "pnpm jest",
    "prepare": "pnpx husky",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "Github",
    "roadmap",
    "Gantt",
    "chart",
    "xlsx",
    "tsv",
    "csv",
    "Excel"
  ],
  "author": "Ben Wolf",
  "license": "MIT",
  "dependencies": {
    "commander": "^13.1.0",
    "csv-parser": "^3.2.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@jest/globals": "^29.7.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.12.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  },
  "lint-staged": {
    "*": "pnpm format:fix",
    "*.ts": "pnpm lint:fix"
  },
  "files": [
    "dist"
  ]
}
